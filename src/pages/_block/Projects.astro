---
import { getCollection } from 'astro:content';
const projects = await getCollection('project');
---

<section class="w-full py-16">
  <div class="mb-12 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
      我的项目
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
      这里展示一些我正在开发或计划中的项目
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project) => (
      <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow duration-300 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            {project.data.title}
          </h3>
          <span class={`
            px-2 py-1 text-xs font-medium rounded-full
            ${project.data.status === '正在开发' ? 'bg-green-100 text-green-800 dark:bg-green-200 dark:text-green-800' : 
              project.data.status === '计划中' ? 'bg-blue-100 text-blue-800 dark:bg-blue-200 dark:text-blue-800' : 
              'bg-yellow-100 text-yellow-800 dark:bg-yellow-200 dark:text-yellow-800'}
          `}>
            {project.data.status}
          </span>
        </div>
        
        <p class="text-gray-700 dark:text-gray-300 mb-4 text-sm leading-relaxed">
          {project.data.description}
        </p>
        
        <div class="flex flex-wrap gap-2 mb-4">
          {project.data.tech.map((tech) => (
            <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-200 dark:text-gray-800">
              {tech}
            </span>
          ))}
        </div>
        
        {project.data.link !== '#' && (
          <a 
            href={project.data.link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
          >
            查看项目
            <span class="icon-[line-md--arrow-right] w-3 h-3 ml-1"></span>
          </a>
        )}
      </div>
    ))}
  </div>
</section>
