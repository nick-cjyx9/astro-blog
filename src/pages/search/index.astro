---
import Base from "../../layouts/Base.astro";
import SearchComponent from "astro-pagefind/components/Search";
import "../../styles/pagefind.css";

const uiConfig = {
  showImages: false,
  showSubResults: false,
  showEmptyFilters: false,
  openFilters: ["类型", "标签"],
  debounceTimeoutMs: 200,
  translations: {
    language: "zh-CN",
    placeholder: "搜索文章、项目或页面...",
    clear_search: "清除搜索",
    search_label: "站内搜索",
    searching: "正在查找 “[SEARCH_TERM]”...",
    zero_results: "未找到与“[SEARCH_TERM]”相关的内容，换个关键词试试？",
    one_result: "找到 1 条与“[SEARCH_TERM]”相关的内容",
    many_results: "找到 [COUNT] 条与“[SEARCH_TERM]”相关的内容",
    load_more: "加载更多结果",
  },
};
---

<Base 
  title="搜索" 
  description="在这里搜索您感兴趣的内容"
  type="website"
  pagefind={{ exclude: true }}
>
  <div class="min-h-[500px]">
    <SearchComponent id="search" className="pagefind-ui" uiOptions={uiConfig} />
  </div>
</Base>
